---
import ThemeSwitcher from "../components/ThemeSwitcher.astro";
import { navSections, topLinks } from "../lib/navigation";
import "../styles.css";

export interface Props {
  title: string;
  description?: string;
  toc?: Array<{ id: string; title: string }>;
  related?: Array<{ href: string; label: string }>;
}

const { title, description, toc = [], related = [] } = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>{title}</title>
    <meta name="description" content={description ?? "Ugoite repository-backed documentation."} />
  </head>
  <body>
    <header class="mx-auto max-w-7xl px-4 py-4">
      <div class="doc-card doc-header">
        <a href="/" class="text-xl font-semibold tracking-tight">Ugoite Docsite</a>
        <nav class="doc-toplinks text-sm">
          {topLinks.map((item) => (
            <a href={item.href} class="rounded-full px-3 py-1.5 hover:opacity-85">{item.title}</a>
          ))}
        </nav>
        <ThemeSwitcher />
      </div>
    </header>
    <main class="mx-auto max-w-7xl px-4 pb-16">
      <div class="doc-shell-3col">
        <aside class="doc-sidebar">
          <p class="text-xs font-semibold uppercase tracking-wide" style="color: var(--doc-muted);">Navigation</p>
          <div class="mt-3 space-y-4">
            {navSections.map((section) => (
              <section>
                <h2 class="text-sm font-semibold">{section.title}</h2>
                <ul class="mt-2 space-y-1 text-sm" style="color: var(--doc-muted);">
                  {section.items.map((item) => (
                    <li>
                      <a href={item.href} class="block rounded px-2 py-1 hover:opacity-80">{item.title}</a>
                    </li>
                  ))}
                </ul>
              </section>
            ))}
          </div>
        </aside>
        <section class="space-y-4">
          <slot />
        </section>
        <aside class="doc-right">
          {toc.length > 0 && (
            <section class="doc-card">
              <h2 class="text-sm font-semibold">On this page</h2>
              <ul class="mt-2 space-y-1 text-sm" style="color: var(--doc-muted);">
                {toc.map((item) => (
                  <li><a href={`#${item.id}`}>{item.title}</a></li>
                ))}
              </ul>
            </section>
          )}
          {related.length > 0 && (
            <section class="doc-card">
              <h2 class="text-sm font-semibold">Related docs</h2>
              <ul class="mt-2 space-y-1 text-sm" style="color: var(--doc-muted);">
                {related.map((item) => (
                  <li><a href={item.href}>{item.label}</a></li>
                ))}
              </ul>
            </section>
          )}
        </aside>
      </div>
    </main>
    <footer class="mx-auto max-w-7xl px-4 pb-10 text-xs" style="color: var(--doc-muted);">
      <div class="doc-card flex flex-wrap items-center justify-between gap-2 py-2">
        <span>Local-first documentation sourced from repository specs.</span>
        <a href="/docs/spec/index">Browse source specification</a>
      </div>
    </footer>
  </body>
</html>
