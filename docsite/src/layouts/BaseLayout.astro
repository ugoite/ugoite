---
import ThemeSwitcher from "../components/ThemeSwitcher.astro";
import { navSections, topLinks } from "../lib/navigation";
import "../styles.css";

export interface Props {
  title: string;
  description?: string;
  toc?: Array<{ id: string; title: string }>;
  related?: Array<{ href: string; label: string }>;
  fullWidth?: boolean;
}

const { title, description, toc = [], related = [], fullWidth = false } = Astro.props;
const hasSidebar = !fullWidth;
const hasRight = toc.length > 0 || related.length > 0;
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
    <meta name="description" content={description ?? "Ugoite â€” local-first, AI-native knowledge space documentation."} />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800;900&display=swap" rel="stylesheet" />
  </head>
  <body>
    <header class="site-header">
      <div class="site-header-inner">
        <a href="/" class="site-brand">Ugoite</a>
        <nav class="site-nav">
          {topLinks.map((link) => (
            <a href={link.href}>{link.title}</a>
          ))}
        </nav>
        <ThemeSwitcher />
      </div>
    </header>

    {fullWidth ? (
      <main class="doc-shell-full">
        <slot />
      </main>
    ) : hasRight ? (
      <main class="doc-shell-3col">
        <aside class="doc-sidebar">
          {navSections.map((section) => (
            <div class="doc-sidebar-section">
              <div class="doc-sidebar-title">{section.title}</div>
              {section.items.map((item) => (
                <a href={item.href} class="doc-sidebar-link">{item.title}</a>
              ))}
            </div>
          ))}
        </aside>
        <div class="space-y-6">
          <slot />
        </div>
        <aside class="doc-right">
          {toc.length > 0 && (
            <div>
              <div class="doc-toc-title">On this page</div>
              {toc.map((item) => (
                <a href={`#${item.id}`} class="doc-toc-link">{item.title}</a>
              ))}
            </div>
          )}
          {related.length > 0 && (
            <div class="mt-6">
              <div class="doc-toc-title">Related</div>
              {related.map((item) => (
                <a href={item.href} class="doc-toc-link">{item.label}</a>
              ))}
            </div>
          )}
        </aside>
      </main>
    ) : (
      <main class="doc-shell">
        <aside class="doc-sidebar">
          {navSections.map((section) => (
            <div class="doc-sidebar-section">
              <div class="doc-sidebar-title">{section.title}</div>
              {section.items.map((item) => (
                <a href={item.href} class="doc-sidebar-link">{item.title}</a>
              ))}
            </div>
          ))}
        </aside>
        <div class="space-y-6">
          <slot />
        </div>
      </main>
    )}

    <footer class="site-footer">
      <div style="max-width: 80rem; margin: 0 auto;">
        Built from source specs. <a href="/docs/spec/index">Browse specification</a>
      </div>
    </footer>
  </body>
</html>
