---
import BaseLayout from "../../../../layouts/BaseLayout.astro";
import ApiConsole from "../../../../components/ApiConsole.astro";
import { getFeatureGroups } from "../../../../lib/spec-data";

export async function getStaticPaths() {
  const groups = await getFeatureGroups();
  return groups.map((group) => ({ params: { kind: group.kind } }));
}

const groups = await getFeatureGroups();
const kind = Astro.params.kind ?? "";
const current = groups.find((group) => group.kind === kind);

if (!current) {
  throw new Error(`Unknown API group: ${kind}`);
}

const toc = current.apis.map((api) => ({ id: api.id, title: `${api.method} ${api.backend.path}` }));
---

<BaseLayout title={`API Domain: ${current.kind}`} description={`API operations for ${current.kind} domain.`} toc={toc} related={[{ href: "/app/api-storage/apis", label: "Back to API catalog" }]}>
  <section class="doc-card doc-card-hero">
    <span class="doc-pill">Domain: {current.kind}</span>
    <h1 class="mt-3 text-3xl font-bold">{current.kind} API</h1>
    <p class="mt-2 text-sm" style="color: var(--doc-muted);">ページ上で target domain を入力して curl コマンドを生成できます。情報は外部に送信されません。</p>
  </section>

  {current.apis.map((api) => (
    <section id={api.id} class="doc-card">
      <div class="flex flex-wrap items-center justify-between gap-2">
        <h2 class="text-lg font-semibold"><span class="doc-pill">{api.method}</span> <span class="ml-2">{api.backend.path}</span></h2>
        <span class="text-xs" style="color: var(--doc-muted);">{api.id}</span>
      </div>
      <div class="mt-3 overflow-x-auto">
        <table class="doc-table text-sm">
          <thead>
            <tr>
              <th>Backend</th>
              <th>Frontend</th>
              <th>CLI</th>
              <th>Core</th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td>{api.backend.file}#{api.backend.function}</td>
              <td>{api.frontend ? `${api.frontend.file}#${api.frontend.function}` : "-"}</td>
              <td>{api.ugoite_cli?.command ?? "-"}</td>
              <td>{api.ugoite_core.file}#{api.ugoite_core.function}</td>
            </tr>
          </tbody>
        </table>
      </div>
      <div class="mt-4">
        <ApiConsole method={api.method} endpoint={api.backend.path} />
      </div>
    </section>
  ))}
</BaseLayout>
