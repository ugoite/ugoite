---
import BaseLayout from "../../layouts/BaseLayout.astro";
import { getRequirementGroups } from "../../lib/spec-data";

const groups = await getRequirementGroups();
const toc = groups.map((group) => ({ id: group.setId.toLowerCase(), title: group.setId }));
---

<BaseLayout title="Requirements | Ugoite Docsite" description="Requirement sets grouped from docs/spec/requirements." toc={toc}>
  <section class="doc-card doc-card-hero">
    <span class="doc-pill">docs/spec/requirements</span>
    <h1 class="mt-3 text-3xl font-bold">要件一覧（グループ分け）</h1>
    <p class="mt-2 text-sm" style="color: var(--doc-muted);">REQCAT 単位で分類し、実装状態を確認しやすくしています。</p>
  </section>

  {groups.map((group) => (
    <section id={group.setId.toLowerCase()} class="doc-card">
      <div class="flex flex-wrap items-center justify-between gap-3">
        <div>
          <p class="doc-pill">{group.setId}</p>
          <p class="mt-2 text-sm" style="color: var(--doc-muted);">{group.scope}</p>
        </div>
        <a href={`/docs/spec/${group.sourceFile.replace(/\.yaml$/, "")}`} class="rounded-full border px-3 py-1.5 text-sm" style="border-color: var(--doc-border);">Source</a>
      </div>
      <div class="mt-4 overflow-x-auto">
        <table class="doc-table text-sm">
          <thead>
            <tr>
              <th>ID</th>
              <th>Title</th>
              <th>Priority</th>
              <th>Status</th>
            </tr>
          </thead>
          <tbody>
            {group.requirements.map((requirement) => (
              <tr>
                <td>{requirement.id}</td>
                <td>{requirement.title}</td>
                <td>{requirement.priority ?? "-"}</td>
                <td>{requirement.status ?? "-"}</td>
              </tr>
            ))}
          </tbody>
        </table>
      </div>
    </section>
  ))}
</BaseLayout>
