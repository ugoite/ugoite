---
import BaseLayout from "../../layouts/BaseLayout.astro";
import { getPhilosophies } from "../../lib/spec-data";

const philosophies = await getPhilosophies();
const toc = philosophies.map((p) => ({ id: p.id.toLowerCase(), title: p.id }));
---

<BaseLayout title="Philosophy | Ugoite" description="Core design philosophies from docs/spec/philosophy." toc={toc}
  related={[{ href: "/design", label: "Design Overview" }, { href: "/design/policies", label: "Policies" }]}>

  <section class="doc-card-hero">
    <div style="position: relative; z-index: 1;">
      <span class="doc-pill">docs/spec/philosophy</span>
      <h1 style="font-size: 2rem; font-weight: 800; margin-top: 0.75rem; letter-spacing: -0.02em;">Philosophy</h1>
      <p style="color: var(--doc-muted); margin-top: 0.5rem; line-height: 1.6;">
        The foundational beliefs that guide every architectural and product decision.
      </p>
    </div>
  </section>

  <div class="doc-grid">
    {philosophies.map((p) => (
      <article id={p.id.toLowerCase()} class="doc-card doc-card-hover">
        <span class="doc-pill" style="margin-bottom: 0.75rem;">{p.id}</span>
        <h2 style="font-size: 1.125rem; font-weight: 700;">{p.title}</h2>
        <p style="font-size: 0.8125rem; color: var(--doc-muted); margin-top: 0.5rem; line-height: 1.7;">{p.summary}</p>
      </article>
    ))}
  </div>
</BaseLayout>
