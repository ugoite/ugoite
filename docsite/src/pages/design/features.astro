---
import BaseLayout from "../../layouts/BaseLayout.astro";
import { getFeatureGroups } from "../../lib/spec-data";

const groups = await getFeatureGroups();
const toc = groups.map((group) => ({ id: group.kind.toLowerCase(), title: group.kind }));
---

<BaseLayout title="Features | Ugoite Docsite" description="Feature groups from docs/spec/features." toc={toc}>
  <section class="doc-card doc-card-hero">
    <span class="doc-pill">docs/spec/features</span>
    <h1 class="mt-3 text-3xl font-bold">機能一覧（グループ分け）</h1>
    <p class="mt-2 text-sm" style="color: var(--doc-muted);">機能セットごとに API 面を整理し、CLI・Core との対応も確認できます。</p>
  </section>

  {groups.map((group) => (
    <section id={group.kind.toLowerCase()} class="doc-card">
      <div class="flex flex-wrap items-center justify-between gap-3">
        <h2 class="text-xl font-semibold">{group.kind}</h2>
        <a href={`/docs/spec/features/${group.file.replace(/\.yaml$/, "")}`} class="rounded-full border px-3 py-1.5 text-sm" style="border-color: var(--doc-border);">Source YAML</a>
      </div>
      <p class="mt-2 text-sm" style="color: var(--doc-muted);">{group.apis.length} operations</p>
      <div class="mt-4 overflow-x-auto">
        <table class="doc-table text-sm">
          <thead>
            <tr>
              <th>Method</th>
              <th>Path</th>
              <th>CLI</th>
              <th>Core</th>
            </tr>
          </thead>
          <tbody>
            {group.apis.map((api) => (
              <tr>
                <td>{api.method}</td>
                <td>{api.backend.path}</td>
                <td>{api.ugoite_cli?.command ?? "-"}</td>
                <td>{api.ugoite_core.function}</td>
              </tr>
            ))}
          </tbody>
        </table>
      </div>
    </section>
  ))}
</BaseLayout>
