---
import BaseLayout from "../layouts/BaseLayout.astro";

const features = [
  {
    icon: "üóÑÔ∏è",
    title: "Local-First Storage",
    description: "Your knowledge lives on portable block storage ‚Äî S3, local filesystem, or any compatible backend. No mandatory SaaS dependency.",
  },
  {
    icon: "ü§ñ",
    title: "AI-Native Workflows",
    description: "MCP integration, spec-driven governance, and traceable AI actions. Every operation is auditable through linked requirements.",
  },
  {
    icon: "üñ•Ô∏è",
    title: "Multi-Surface Control",
    description: "Operate from API, CLI, or browser UI. All surfaces share one durable core logic layer and data model.",
  },
  {
    icon: "‚ö°",
    title: "Serverless Ready",
    description: "Thin FastAPI adapter with zero business logic ‚Äî deploy as a serverless function or traditional service.",
  },
  {
    icon: "üîí",
    title: "Privacy by Design",
    description: "Data stays where you put it. No telemetry, no cloud lock-in. Full control over your knowledge infrastructure.",
  },
  {
    icon: "üìê",
    title: "Spec-Driven Development",
    description: "Every feature traces to YAML specs: philosophy ‚Üí policy ‚Üí requirement ‚Üí implementation. Machine-readable, human-friendly.",
  },
];
---

<BaseLayout title="Ugoite ‚Äî Local-First Knowledge Space" fullWidth={true}>
  <!-- Hero -->
  <section class="doc-card-hero" style="text-align: center; padding: 5rem 2rem 4rem;">
    <div style="position: relative; z-index: 1;">
      <p class="doc-pill" style="margin-bottom: 1.5rem;">Open Source &middot; Local-First &middot; AI-Native</p>

      <h1 style="font-size: clamp(3rem, 8vw, 5.5rem); font-weight: 900; letter-spacing: -0.04em; line-height: 1; margin: 0;">
        <span style="background: var(--doc-accent-gradient); -webkit-background-clip: text; -webkit-text-fill-color: transparent; background-clip: text;">Ugoite</span>
      </h1>

      <p style="font-size: clamp(1rem, 2.5vw, 1.5rem); font-weight: 500; color: var(--doc-muted); margin-top: 1rem; letter-spacing: -0.01em;">
        let your local knowledge move
      </p>

      <p style="max-width: 36rem; margin: 1.5rem auto 0; font-size: 0.9375rem; line-height: 1.7; color: var(--doc-muted);">
        A private, portable knowledge space that runs anywhere ‚Äî combining block storage, local APIs, and an AI-ready operation model for teams that own their data.
      </p>

      <div style="display: flex; gap: 0.75rem; justify-content: center; margin-top: 2rem; flex-wrap: wrap;">
        <a href="/design" class="doc-btn doc-btn-primary">Design Principles</a>
        <a href="/app" class="doc-btn doc-btn-outline">Application</a>
        <a href="/docs/spec/index" class="doc-btn doc-btn-outline">Source Specs</a>
      </div>
    </div>
  </section>

  <!-- Feature grid -->
  <section style="margin-top: 3rem;">
    <div class="doc-grid">
      {features.map((f) => (
        <article class="doc-card doc-card-hover">
          <div style="font-size: 1.75rem; margin-bottom: 0.75rem;">{f.icon}</div>
          <h3 style="font-size: 1rem; font-weight: 700; margin: 0;">{f.title}</h3>
          <p style="font-size: 0.8125rem; color: var(--doc-muted); margin-top: 0.5rem; line-height: 1.6;">{f.description}</p>
        </article>
      ))}
    </div>
  </section>

  <!-- Quick stats -->
  <section class="doc-card" style="margin-top: 2rem;">
    <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(8rem, 1fr)); gap: 1rem;">
      <div class="doc-stat">
        <div class="doc-stat-value">4</div>
        <div class="doc-stat-label">Philosophies</div>
      </div>
      <div class="doc-stat">
        <div class="doc-stat-value">14</div>
        <div class="doc-stat-label">Policies</div>
      </div>
      <div class="doc-stat">
        <div class="doc-stat-value">12</div>
        <div class="doc-stat-label">Requirement Sets</div>
      </div>
      <div class="doc-stat">
        <div class="doc-stat-value">3</div>
        <div class="doc-stat-label">Control Surfaces</div>
      </div>
    </div>
  </section>
</BaseLayout>
